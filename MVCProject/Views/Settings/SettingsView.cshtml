        <div class="funkyradio">
            <div class="funkyradio-danger">
                <input type="checkbox" name="radio" onchange="NightLight()" id="Nightlight">
                <label for="Nightlight">Enable Nightlight</label>
            </div>
            <div class="funkyradio-primary">
                <input type="checkbox" name="radio" onchange="EnableAlarm()" id="Alarm">
                <label for="Alarm">Enable Alarm Security</label>
            </div>
            <div class="funkyradio-success">
                <input type="checkbox"  onchange="MotionDection()" name="radio" id="Motion">
                <label for="Motion">Enable Shades Up on Motion</label>
            </div>
        </div>
    </div>


