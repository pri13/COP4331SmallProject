<body>
    <h1 style="text-align:center;color:black;">Settings</h1>
    <br>
    <div>
        <button type="button" style="margin:5px;" class="btn btn-info" onclick="GoBackToDashBoard()">Go Back to Dashboard</button>
    </div>
    <div align="center" class="container">
        <form id="automation" name="auto">
            <div class="col-md-4">
                <p><b>Automation Settings</b></p>
                <label for="time1">Wake Time:</label>
                <input type="time" id="time1" name="WakeTime" class="form-control" value="21:00:00" />

